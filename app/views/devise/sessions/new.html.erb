<%= form_with scope: resource, as: resource_name, url: session_path(resource_name), local: true do |f| %>
  <%= devise_error_messages! %>
    <div class="field">
      <label class="label">Email</label>
      <div class="control has-icons-left has-icons-right">
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "input is-info" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
        <span class="icon is-small is-right">
          <i class="fas fas fa-check"></i>
        </span>
      </div>
    </div>

    <div class="field">
    <label class="label">Password</label>
    <div class="control has-icons-left has-icons-right">
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "input is-info" %>
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fas fa-check"></i>
      </span>
    </div>
  </div>

  <div class="field is-grouped is-grouped-right">
    <%= f.submit "ログインする", class: "button is-info" %>
  </div>
<% end %>

<br>
<p class="devise-link">
  アカウントをお持ちでないですか？
  <%= link_to "登録する", new_user_registration_path %>
</p>