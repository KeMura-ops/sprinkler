<div class="change-profile">
  <%= form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true, method: :patch do |f| %>
    <div class="form-group">
      <%= f.text_field :nickname, autofocus: true, placeholder: "ニックネーム" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autofocus: "off", placeholder: "パスワード" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autofocus: "off", placeholder: "パスワードの確認" %>
    </div>

    <%= f.submit "変更する" %>
  <% end %>
</div>

