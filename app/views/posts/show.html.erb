<div class="container">
  <div class="col-md-10 col-md-offset-1 mx-auto postShow-wrap">
    <div class="row post-wrap">
      <div class="col-md-8">
        <div class="card-left">
          <%= image_tag @post.image.variant(resize: '1080x1080'), class: "card-img-top" if @post.image.attached? %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card-right">
          <div class="card-right-comment">
            <div class="card-right-name">
            <%= link_to user_path(@post.user), class: "no-text-decoration" do %>
              <%= image_tag "profile.png", class: "post-profile-icon" %>
            <% end %>
            <%= link_to user_path(@post.user), class: "black-color no-text-decoration post-user-name",
              title: @post.user.nickname do %>
              <strong><%= @post.user.nickname %></strong>
            <% end %>

            <% if @post.user_id == current_user.id %>
              <%= link_to post_path(@post), method: :delete, class: "ml-auto mx-0 my-auto" do %>
                <i class="fas fa-trash-alt"></i>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="m-2">
            <strong>
              <%= @post.text %>
            </strong>
            <strong>
              <%@post.tags.each do |tag| %>
                #<%=tag.name%>
              <% end %>
            </strong>
          </div>
          <div class="comment-post-id">
            <div class="m-2">
            </div>
          </div>
        </div>
        <div class="row parts">
        </div>
        <div class="post-time"><%= time_ago_in_words(@post.created_at).upcase %>Ââç</div>
          <hr>
        </div>
      </div>
    </div>
  </div>
</div>
